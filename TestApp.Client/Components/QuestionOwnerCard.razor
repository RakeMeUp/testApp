<RadzenCard>
    <RadzenStack Orientation="Radzen.Orientation.Horizontal" AlignItems="Radzen.AlignItems.Center" JustifyContent="Radzen.JustifyContent.SpaceAround" Style="padding-left: 20px; padding-right: 20px" Wrap="Radzen.FlexWrap.Wrap" Gap="">
            <RadzenText Text="@questionText" TextStyle="Radzen.Blazor.TextStyle.Subtitle1" TextAlign="Radzen.TextAlign.Center" />
            <RadzenText TextStyle="Radzen.Blazor.TextStyle.H5" TextAlign="Radzen.TextAlign.Center" >
                Max Grade: @maxGrade
            </RadzenText>
    </RadzenStack>
</RadzenCard>
@code {
    [Parameter]
    public QuestionGetDTO dto { get; set; } = new();
    public string questionText { get; set; } = "";
    public float maxGrade { get; set; }
    protected override void OnInitialized()
    {
        maxGrade = dto.MaxGrade;
        questionText = dto.QuestionText;
    }
}